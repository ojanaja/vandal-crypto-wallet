{
  "manifest_version": 3,
  "name": "VANDAL Wallet",
  "version": "1.0.0",
  "description": "Advanced Devnet Crypto Wallet",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Open VANDAL"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "vite.svg",
    "48": "vite.svg",
    "128": "vite.svg"
  },
  "web_accessible_resources": [
    {
      "resources": ["inpage.js", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
